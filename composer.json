{
    "name": "codewiser/laravel-scout",
    "description": "Laravel Scout helpers",
    "type": "library",
    "license": "MIT",
    "replace": {
        "codewiser/laravel-meilisearch": "^1.0.5"
    },

    "autoload": {
        "psr-4": {
            "Codewiser\\Scout\\": "src/"
        }
    },
    "authors": [
        {
            "name": "pm",
            "email": "pm@101media.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": ">=10.0",
        "laravel/scout": ">=10.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codewiser\\Scout\\ScoutServiceProvider"
            ]
        }
    },
    "require-dev": {
        "meilisearch/meilisearch-php": "^1.7",
        "algolia/algoliasearch-client-php": "^3.4",
        "typesense/typesense-php": "^4.9",
        "symfony/http-client": "^6.4"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
